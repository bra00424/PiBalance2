<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#009988"
    android:orientation="vertical" >

    <TextView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:text="Raspberry Pi Balance"
        android:textSize="50sp"
        android:id="@+id/piBalanceText"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/speakBalanceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/voic_img"
        android:layout_alignTop="@+id/balanceInput"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView android:id="@+id/idBalanceWeight"
        android:text="Balance Weight"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:layout_marginTop="98dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/balanceInput"
        android:text="Balance Input"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:drawableTop="@android:color/black"
        android:drawableBottom="@android:color/black"
        android:inputType="numberDecimal"
        android:background="#ff6041ff"
        android:layout_above="@+id/textViewSampleID"
        android:layout_toRightOf="@+id/idBalanceWeight"
        android:layout_toEndOf="@+id/idBalanceWeight" />

    <TextView
        android:id="@+id/textViewSampleID"
        android:text="Sample ID"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/idBalanceWeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/sampleInput"
        android:text="Sample ID Input"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:drawableTop="@android:color/black"
        android:drawableBottom="@android:color/black"
        android:inputType="numberDecimal"
        android:layout_alignTop="@+id/textViewSampleID"
        android:layout_toRightOf="@+id/textViewSampleID"
        android:layout_toEndOf="@+id/textViewSampleID"
        android:background="#ff6041ff" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Upload"
        android:id="@+id/uploadButton"
        android:layout_marginTop="45dp"
        android:textSize="40sp"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@+id/sampleInput"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/speakSampleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewSampleID"
        android:layout_alignLeft="@+id/speakBalanceButton"
        android:layout_alignStart="@+id/speakBalanceButton"
        android:background="@drawable/voic_img"/>


</RelativeLayout>